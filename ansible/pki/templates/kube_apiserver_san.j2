# IPs e nomes locais
- IP:127.0.0.1
- DNS:localhost

# Nome e IP do nó atual
- IP:{{ hostvars[manager_host]['ansible_host'] }}
- DNS:{{ manager_host }}

# IPs e nomes dos load balancers
{% for host in groups['loadbalancers'] %}
- IP:{{ hostvars[host]['ansible_host'] }}
- DNS:{{ host }}
{% endfor %}

# Nome do serviço do Kubernetes
- DNS:kubernetes
- DNS:kubernetes.default
- DNS:kubernetes.default.svc
- DNS:kubernetes.default.svc.cluster
- DNS:kubernetes.default.svc.cluster.local

# IP do serviço Kubernetes (primeiro IP do CIDR de serviços)
- IP:{{ rede_cidr_services | ipaddr('net') | ipaddr('1') | ipaddr('address') }}